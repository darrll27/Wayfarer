{
  "name": "nomad-frontend",
  "main": "electron-main.js",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
  "electron:dev": "wait-on http://localhost:5173 && ELECTRON_START_URL=http://localhost:5173 electron .",
    "start": "concurrently \"npm:dev\" \"npm:electron:dev\"",
    "package:mac": "electron-builder --mac --x64",
    "package:all": "electron-builder"
  },
  "dependencies": {
  "react": "^18.2.0",
  "react-dom": "^18.2.0"
    ,"leaflet": "^1.9.4",
    "react-leaflet": "^4.2.1"
  },
  "devDependencies": {
    "vite": "^7.2.2",
    "@vitejs/plugin-react": "^5.1.1",
    "typescript": "^5.9.3",
  "@types/react": "^18.2.21",
  "@types/react-dom": "^18.2.7",
    "electron": "^39.1.2",
    "concurrently": "^9.2.1",
    "wait-on": "^9.0.3",
    "electron-builder": "^24.6.0"
  }

  ,
  "build": {
    "appId": "com.wayfarer.nomad",
    "productName": "Nomad",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "electron-main.js",
      "package.json"
    ],
    "mac": {
      "target": ["dmg"],
      "artifactName": "${productName}-v${version}-mac.${ext}"
    },
    "extraResources": [
      {
        "from": "../nomad-backend",
        "to": "bin/nomad-backend",
        "filter": ["**/*"]
      }
    ]
  }
}
